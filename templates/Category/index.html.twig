{% extends 'base.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Toutes les cat√©gories:</h1>
        <ul class="list-group">
            {% for category in categories %}
                <li class="list-group-item">
                    <a href="{{ path('category_show', { categoryName: category.name }) }}" class="text-decoration-none">{{ category.name }}</a>
                </li>
            {% else %}
                <li class="list-group-item">No categories found.</li>
            {% endfor %}
        </ul>

        <a href="{{ path('app_index') }}" class="btn btn-primary mt-3">
            Back to Home
        </a>
    </div>
{% endblock %}
