{% extends 'base.html.twig' %}

{% block title %}Category: {{ category.name }}{% endblock %}

{% block body %}
    <h1>Category: {{ category.name }}</h1>

    {% if programs|length > 0 %}
        <h2>Programs:</h2>
        <ul>
            {% for program in programs %}
                <li>
                    {{ program.id }} - {{ program.title }} - {{ program.synopsis }}
                    <a href="{{ path('program_show', { id: program.id }) }}">View Details</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No programs found in this category.</p>
    {% endif %}

    <a href="{{ path('category_index') }}">
        Back to Categories
    </a>
{% endblock %}
